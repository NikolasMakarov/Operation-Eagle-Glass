<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="OEG_Helicopter_Base" ParentName="SkyfallerBase" Abstract="True">
    <label>helicopter</label>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(6,10)</drawSize>
    </graphicData>
    <size>(5,5)</size>
    <tickerType>Normal</tickerType>
    <selectable>False</selectable>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>false</hasStandardCommand>
        <defaultProjectile>OEG_Helicopter_Bullet</defaultProjectile>
        <warmupTime>0</warmupTime>
        <defaultCooldownTime>1</defaultCooldownTime>
        <range>35</range>
        <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="OperationEagleGlass.CompProperties_AmmoUser">
        <ammoCapacity>500</ammoCapacity>
        <ammoPerShot>1</ammoPerShot>
      </li>
    </comps>
    <skyfaller>
      <rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
      <floatingSound>OEG_Helicopter_Sustain</floatingSound>
      <shadowSize>(5,5)</shadowSize>
      <motesPerCell>1</motesPerCell>
    </skyfaller>
  </ThingDef>

  <ThingDef Name="OEG_HelicopterArriving_Base" ParentName="OEG_Helicopter_Base" Abstract="True">
    <thingClass>OperationEagleGlass.Skyfaller_Helicopter</thingClass>
    <skyfaller>
      <movementType>Decelerate</movementType>
      <speedCurve>
        <points>
          <li>(0, 1.8)</li>
          <li>(0.6, 0.8)</li>
          <li>(0.9, 0.2)</li>
          <li>(1, 0)</li>
        </points>
      </speedCurve>
      <angleCurve>
        <points>
          <li>(0, 20)</li>
          <li>(0.5, 15)</li>
          <li>(0.8, 5)</li>
          <li>(1, 0)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(0, 0)</li>
          <li>(1, 0)</li>
        </points>
      </rotationCurve>
      <ticksToImpactRange>
        <min>200</min>
        <max>200</max>
      </ticksToImpactRange>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="OEG_HelicopterArriving_Base">
    <defName>OEG_HelicopterArriving_Apache</defName>
    <graphicData>
      <texPath>Things/Vehicle/OEG_Apache/OEG_Apache</texPath>
    </graphicData>
    <modExtensions>
      <li Class="OperationEagleGlass.HelicopterSkyfallerExtension">
        <leavingSkyfaller>OEG_HelicopterLeaving_Apache</leavingSkyfaller>
        <gunGraphic>
          <texPath>Things/Vehicle/OEG_Apache/OEG_Apache_gun</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <shaderType>Transparent</shaderType>
          <drawSize>(2,2)</drawSize>
        </gunGraphic>
        <gunDrawOffsetNorth>(0, 4)</gunDrawOffsetNorth>
        <gunDrawOffsetSouth>(0, -4)</gunDrawOffsetSouth>
        <gunDrawOffsetEast>(3.7, -0.5)</gunDrawOffsetEast>
        <gunDrawOffsetWest>(-3.7, -0.5)</gunDrawOffsetWest>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="OEG_HelicopterArriving_Base">
    <defName>OEG_HelicopterArriving_Blackhawk</defName>
    <graphicData>
      <texPath>Things/Vehicle/OEG_Blackhawk/OEG_Blackhawk</texPath>
    </graphicData>
    <modExtensions>
      <li Class="OperationEagleGlass.HelicopterSkyfallerExtension">
        <leavingSkyfaller>OEG_HelicopterLeaving_Blackhawk</leavingSkyfaller>
        <ropeExtendSpeed>0.1</ropeExtendSpeed>
        <ropeDescentTime>1</ropeDescentTime>
        <ropeColor>(0.15, 0.1, 0.05)</ropeColor>
        <ropeWidth>0.2</ropeWidth>
        <leftRopeDrawOffset>(-2, 0)</leftRopeDrawOffset>
        <rightRopeDrawOffset>(2, 0)</rightRopeDrawOffset>
      </li>
    </modExtensions>
  </ThingDef>
  <ThingDef Name="OEG_HelicopterLeaving_Base" ParentName="OEG_Helicopter_Base" Abstract="True">
    <thingClass>OperationEagleGlass.Skyfaller_Hovering</thingClass>
    <skyfaller>
      <reversed>true</reversed>
      <movementType>Accelerate</movementType>
      <shadow>Things/Skyfaller/SkyfallerShadowCircle</shadow>
      <ticksToImpactRange>
        <min>-150</min>
        <max>-150</max>
      </ticksToImpactRange>
      <speedCurve>
        <points>
          <li>(0, 0)</li>
          <li>(0.2, 0.3)</li>
          <li>(0.5, 0.8)</li>
          <li>(1, 1.5)</li>
        </points>
      </speedCurve>
      <angleCurve>
        <points>
          <li>(0, 0)</li>
          <li>(0.2, 5)</li>
          <li>(0.5, 12)</li>
          <li>(1, 15)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(0, 0)</li>
          <li>(0.3, 1)</li>
          <li>(0.6, 3)</li>
          <li>(1, 5)</li>
        </points>
      </rotationCurve>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="OEG_HelicopterLeaving_Base">
    <defName>OEG_HelicopterLeaving_Apache</defName>
    <graphicData>
      <texPath>Things/Vehicle/OEG_Apache/OEG_Apache</texPath>
    </graphicData>
    <modExtensions>
      <li Class="OperationEagleGlass.HelicopterSkyfallerExtension">
        <gunGraphic>
          <texPath>Things/Vehicle/OEG_Apache/OEG_Apache_gun</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <shaderType>Transparent</shaderType>
          <drawSize>(2,2)</drawSize>
        </gunGraphic>
        <gunDrawOffsetNorth>(0, 4)</gunDrawOffsetNorth>
        <gunDrawOffsetSouth>(0, -4)</gunDrawOffsetSouth>
        <gunDrawOffsetEast>(3.7, -0.5)</gunDrawOffsetEast>
        <gunDrawOffsetWest>(-3.7, -0.5)</gunDrawOffsetWest>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="OEG_HelicopterLeaving_Base">
    <defName>OEG_HelicopterLeaving_Blackhawk</defName>
    <graphicData>
      <texPath>Things/Vehicle/OEG_Blackhawk/OEG_Blackhawk</texPath>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>OEG_Helicopter_Bullet</defName>
    <label>helicopter bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
</Defs>