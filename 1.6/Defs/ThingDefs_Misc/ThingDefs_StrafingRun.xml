<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="OEG_StrafingRunSkyfallerBase" ParentName="SkyfallerBase" Abstract="True">
    <label>strafing run</label>
    <thingClass>OperationEagleGlass.Skyfaller_StrafingRun</thingClass>
    <graphicData>
      <texPath>Things/Skyfaller/SkyfallerShadowCircle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(6,6)</drawSize>
    </graphicData>
    <skyfaller>
      <speed>0.5</speed>
      <floatingSound>OEG_StrafingRun_Sustain</floatingSound>
      <reversed>true</reversed>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="OEG_StrafingRunSkyfallerBase">
    <defName>OEG_StrafingRunSkyfaller_MachineGun</defName>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>false</hasStandardCommand>
        <defaultProjectile>Bullet_Minigun</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>999</range>
        <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef ParentName="OEG_StrafingRunSkyfallerBase">
    <defName>OEG_StrafingRunSkyfaller_Autocannon</defName>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>false</hasStandardCommand>
        <defaultProjectile>Bullet_AutocannonTurret</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>999</range>
        <burstShotCount>5</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>Shot_Autocannon</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef ParentName="OEG_StrafingRunSkyfallerBase">
    <defName>OEG_StrafingRunSkyfaller_Rockets</defName>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>false</hasStandardCommand>
        <defaultProjectile>Bullet_Rocket</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>999</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <soundCast>RocketswarmLauncher_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <forcedMissRadius>2.9</forcedMissRadius>
      </li>
    </verbs>
  </ThingDef>

</Defs>
